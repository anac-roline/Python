#Declarando variáveis
nome = "João"          #Tipo de dado: string
idade = 25             #Tipo de dado: inteiro
altura = 1.75          #Tipo de dado: float
is_estudante = True    #Tipo de dado: booleano

#Exibindo os valores das variáveis (Funções para exibir mensagens na tela)

print ("Nome: ", nome)
print ("Idade: ", idade)
print ("Altura: ", altura)
print ("Estudante: ", is_estudante)
